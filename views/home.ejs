<%- include('./partials/header.ejs') %>
<h1>Home</h1>

<form action="/" method="GET" >
  <input type="text" name="word" placeholder="Search for a word..." value="<%= searchedItem %>">
  <button type="submit">Search</button>
</form>

<% if (searchedItem) { %>
  <% if (word) { %>
    <h2>Found:</h2>
    <p><a href="/community/<%= word._id %>"><%= word.name %></a></p>
  <% } else { %>
    <h2>No results found. Create "<%= searchedItem %>" in your dictionary.</h2>
  <% } %>
<% } else { %>
  <h2>Please enter a word to search.</h2>
<% } %>

